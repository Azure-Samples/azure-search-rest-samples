            {
            "name": "metadata_storage_name",
            "type": "Edm.String",
            "searchable": false,
            "filterable": false,
            "facetable": false,
            "sortable": false
            },
            {
            "name": "content",
            "type": "Edm.String",
            "facetable": false,
            "filterable": true,
            "searchable": true,
            "sortable": false
            },
            {
            "name": "text",
            "type": "Collection(Edm.String)",
            "facetable": false,
            "filterable": true,
            "searchable": true,
            "sortable": false
            },
            {
            "name": "layoutText",
            "type": "Collection(Edm.String)",
            "facetable": false,
            "filterable": true,
            "searchable": true,
            "sortable": false
            }
        ]
    }


### Create and run an indexer (takes a minute)
POST {{baseUrl}}/indexers?api-version=2023-11-01
Content-Type: application/json
api-key: {{apiKey}}

    {
        "name" : "unsplash-signs-idxr",
        "dataSourceName" : "unsplash-signs-ds",
        "targetIndexName" : "unsplash-signs-idx",
        "skillsetName" : "unsplash-signs-ss",
        "fieldMappings" : [
            {
            "sourceFieldName" : "metadata_storage_path",
            "targetFieldName" : "id",
            "mappingFunction" :
                { "name" : "base64Encode" }
            },
            {
            "sourceFieldName" : "metadata_storage_name",
            "targetFieldName" : "metadata_storage_name",
            "mappingFunction" :
                { "name" : "base64Encode" }
            },
            {
            "sourceFieldName" : "content",
            "targetFieldName" : "content"
            }
        ],
        "outputFieldMappings" :
        [
            {
            "sourceFieldName" : "/document/normalized_images/*/text",
            "targetFieldName" : "text"
            },
            {
            "sourceFieldName" : "/document/normalized_images/*/layoutText",
            "targetFieldName" : "layoutText"
            }
        ],
        "parameters":
        {
            "maxFailedItems":-1,
            "maxFailedItemsPerBatch":-1,
            "configuration":
            {
            "dataToExtract": "contentAndMetadata",
            "imageAction": "generateNormalizedImages",
            "parsingMode": "default",
            "firstLineContainsHeaders": false,
            "delimitedTextDelimiter": ","
            }
        }
    }

### Get indexer status (watch for items processed and errors)
GET {{baseUrl}}/indexers/unsplash-signs-idxr/status?api-version=2023-11-01
  api-key: {{apiKey}}

### Run a search query
POST {{baseUrl}}/indexes/unsplash-signs-idx/docs/search?api-version=2023-11-01
  Content-Type: application/json
  api-key: {{apiKey}}

    {
        "search": "*",
        "select": "id,metadata_storage_name,text",
        "count": true
    }

